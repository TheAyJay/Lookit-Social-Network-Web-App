<div class="container">
  <br></br>
  <h3>
  Please login or sign up
  </h3>
    <%= form_tag sessions_path do |form| %>
      <div class=”field-input”>
        <%= label_tag "Email address:" %>
        <%= text_field_tag :email, nil, placeholder: "Enter email address" %>
      </div>
      <div class=”field-input”>
        <%= label_tag "Password:" %>
        <%= password_field_tag :password, nil, placeholder: "Enter password" %>
      </div>
      <p id=”alert”><%= alert %></p>
      <div class=”actions”>
        <br></br>
        <%= submit_tag 'Login' %>
        <br></br>
        <%= link_to "Sign Up", signup_path %>
      </div>
</div>
    <% end %>
